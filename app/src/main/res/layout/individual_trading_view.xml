<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="10dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardBackgroundColor="@color/cardviewColor"
    app:cardCornerRadius="@dimen/card_view_radius"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/standard_margin">

            <TextView
                android:id="@+id/sol_name_of_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_name_of_file"
                android:textColor="@color/text_color"
                android:textSize="@dimen/page_titles"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/less_padding"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/sol_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_margin"
                android:maxLines="2"
                android:text="@string/ui_date"
                android:textColor="@color/text_color"
                android:textSize="@dimen/secondary_text" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/standard_margin"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/card_view_radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/standard_margin"
                android:text="@string/view"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/modal_text"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>
